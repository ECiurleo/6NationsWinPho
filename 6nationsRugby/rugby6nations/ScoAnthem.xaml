                    <TextBlock Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" Width="425">
                	<Run Text="O Flower of Scotland,"/>
                	<LineBreak/>
                	<Run Text="When will we see"/>
                	<LineBreak/>
                	<Run Text="Your like again,"/>
                	<LineBreak/>
                	<Run Text="That fought and died for,"/>
                	<LineBreak/>
                	<Run Text="Your wee bit Hill and Glen,"/>
                	<LineBreak/>
                	<Run Text="And stood against him,"/>
                	<LineBreak/>
                	<Run Text="Proud Edward's Army,"/>
                	<LineBreak/>
                	<Run Text="And sent him homeward,"/>
                	<LineBreak/>
                	<Run Text="Tae think again."/>
                	<LineBreak/>
                	<Run/>
                	<LineBreak/>
                	<Run Text="The Hills are bare now"/>
                	<LineBreak/>
                	<Run Text=", And Autumn leaves"/>
                	<LineBreak/>
                	<Run Text="lie thick and still,"/>
                	<LineBreak/>
                	<Run Text="O'er land that is lost now,"/>
                	<LineBreak/>
                	<Run Text="Which those so dearly held,"/>
                	<LineBreak/>
                	<Run Text="That stood against him,"/>
                	<LineBreak/>
                	<Run Text="Proud Edward's Army,"/>
                	<LineBreak/>
                	<Run Text="And sent him homeward,"/>
                	<LineBreak/>
                	<Run Text="Tae think again."/>
                	<LineBreak/>
                	<Run/>
                	<LineBreak/>
                	<Run Text="Those days are past now,"/>
                	<LineBreak/>
